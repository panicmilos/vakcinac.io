<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="2.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <xsl:attribute-set name="h1">
    <xsl:attribute name="font-size">20px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="h3">
    <xsl:attribute name="margin-top">-5px</xsl:attribute>
    <xsl:attribute name="font-size">15px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="hint">
    <xsl:attribute name="font-size">10px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="table">
    <xsl:attribute name="width">100%</xsl:attribute>
    <xsl:attribute name="margin-bottom">8px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="inline-table">
    <xsl:attribute name="width">100%</xsl:attribute>
    <xsl:attribute name="margin-bottom">4px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="b-table">
    <xsl:attribute name="width">100%</xsl:attribute>
    <xsl:attribute name="border-collapse">collapse</xsl:attribute>
    <xsl:attribute name="text-align">center</xsl:attribute>
    <xsl:attribute name="border">1px solid black</xsl:attribute>
    <xsl:attribute name="margin-top">5px</xsl:attribute>
    <xsl:attribute name="margin-bottom">4px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="b-th">
    <xsl:attribute name="font-size">10px</xsl:attribute>
    <xsl:attribute name="text-align">center</xsl:attribute>
    <xsl:attribute name="border">1px solid black</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="b-td">
    <xsl:attribute name="text-align">center</xsl:attribute>
    <xsl:attribute name="border">1px solid black</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="ml-5">
    <xsl:attribute name="margin-left">5px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="mr-5">
    <xsl:attribute name="margin-right">5px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="mb-10">
    <xsl:attribute name="margin-bottom">10px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="bold-text">
    <xsl:attribute name="font-weight">bold</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="centered-text">
    <xsl:attribute name="text-align">center</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="underline-text">
    <xsl:attribute name="border-bottom">1px solid black</xsl:attribute>
    <xsl:attribute name="width">100%</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="right-dash">
    <xsl:attribute name="border-right">1px solid black</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="checkbox">
    <xsl:attribute name="border">1px solid black</xsl:attribute>
    <xsl:attribute name="text-align">center</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="checkbox-text">
    <xsl:attribute name="padding-left">3px</xsl:attribute>
    <xsl:attribute name="padding-right">2px</xsl:attribute>
  </xsl:attribute-set>

  <xsl:attribute-set name="separator">
    <xsl:attribute name="border-bottom">1px dotted black</xsl:attribute>
    <xsl:attribute name="width">100%</xsl:attribute>
    <xsl:attribute name="margin-top">15px</xsl:attribute>
    <xsl:attribute name="margin-bottom">15px</xsl:attribute>
  </xsl:attribute-set>

</xsl:stylesheet>